<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bdsqltester.scenes.GuruController">
    <Label text="Jadwal Mengajar"/>
    <TableView fx:id="jadwalTable" prefHeight="200"/>

    <Label text="Input Nilai Ujian"/>
    <HBox spacing="5">
        <TextField fx:id="siswaIdField" promptText="ID Siswa"/>
        <TextField fx:id="mapelIdField" promptText="ID Mapel"/>
        <TextField fx:id="nilaiField" promptText="Nilai"/>
        <Button text="Submit" fx:id="submitButton" onAction="#handleInputNilai"/>
    </HBox>
</VBox>
